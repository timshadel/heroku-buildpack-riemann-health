#!/bin/sh

build_dir=$1
cache_dir=$2
pack_dir="$( cd "$( dirname "$0" )/.." && pwd )"

echo `$pack_dir`
echo `ls -la $pack_dir/support`
echo `ls -la $pack_dir/bin`
mkdir -p $build_dir/.profile.d/
bundle install --gemfile $pack_dir/support/Gemfile --without development:test --path $build_dir/.gems --binstubs $build_dir/bin/ --deployment
cp $pack_dir/support/riemann-health.sh $build_dir/.profile.d/
